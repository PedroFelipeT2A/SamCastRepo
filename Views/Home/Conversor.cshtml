@{
    ViewData["Title"] = "Utilitário Conversor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content flex-row-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div>
                            <i class="fa fa-cogs fa-2x"></i>
                        </div>
                        <div class="text-end" style="font-size: 2rem; color: #ff940a">
                            <strong>Utilitário de Conversão</strong>
                        </div>
                    </div>
                    <hr />

                    <form method="post" enctype="multipart/form-data">
                        <div class="row">
                            <!-- Campo para Video Bitrate -->
                            <div class="col-md-6 mb-3">
                                <label for="video_bitrate" class="form-label text-muted">Video Bitrate</label>
                                <input class="form-control border-primary" type="text" id="video_bitrate" name="video_bitrate" />
                            </div>

                            <!-- Campo para Audio Bitrate -->
                            <div class="col-md-6 mb-3">
                                <label for="audio_bitrate" class="form-label text-muted">Audio Bitrate</label>
                                <input class="form-control border-primary" type="text" id="audio_bitrate" name="audio_bitrate" />
                            </div>
                        </div>

                        <div class="row mt-3">
                            <!-- Botão para preset -->
                            <div class="col-md-12 mb-3">
                                <button type="button" class="btn btn-secondary w-100" onclick="preset('500|128')">Preset 500|128</button>
                            </div>
                        </div>

                        <div class="row mt-4">
                            <!-- Botão para enviar dados -->
                            <div class="col-md-12">
                                <button type="submit" class="btn btn-primary w-100">Aplicar Conversão</button>
                            </div>
                        </div>
                    </form>

                    <!-- Exibição de mensagem de sucesso após a ação -->
                    @if (TempData["StatusAcao"] != null)
                    {
                        <div class="alert alert-success mt-4">
                            @Html.Raw(TempData["StatusAcao"])
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
