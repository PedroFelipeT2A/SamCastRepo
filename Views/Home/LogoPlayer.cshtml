@{
    ViewData["Title"] = "Configuração de Marca d'Água";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Painel.Models.WatermarkViewModel

<div class="content flex-row-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div>
                            <i class="fa fa-image fa-2x"></i>
                        </div>
                        <div class="text-end" style="font-size: 2rem; color: #ff940a">
                            <strong>Configuração da Marca d'Água</strong>
                        </div>
                    </div>
                    <hr />

                    <form method="post" enctype="multipart/form-data">
                        <div class="row">
                            <!-- Campo para upload de logo -->
                            <div class="col-md-6 mb-3">
                                <label for="Logo" class="form-label text-muted">Logo (PNG)</label>
                                <input class="form-control border-primary" type="file" id="Logo" name="Logo" accept="image/png" required />
                                <small class="form-text text-muted">A logo deve ser no formato PNG.</small>
                            </div>

                            <!-- Campo para seleção de posição -->
                            <div class="col-md-6 mb-3">
                                <label for="Posicao" class="form-label text-muted">Posição da Marca d'Água</label>
                                <select class="form-select border-primary" id="Posicao" name="Posicao" asp-for="Posicao">
                                    <option value="top-left">Superior Esquerdo</option>
                                    <option value="top-right">Superior Direito</option>
                                    <option value="bottom-left">Inferior Esquerdo</option>
                                    <option value="bottom-right">Inferior Direito</option>
                                </select>
                            </div>
                        </div>

                        <!-- Campo para remover a marca d'água existente -->
                        <div class="row mt-3">
                            <div class="col-md-12">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="RemoverWatermark" name="RemoverWatermark" asp-for="RemoverWatermark" />
                                    <label class="form-check-label" for="RemoverWatermark">
                                        Remover marca d'água existente
                                    </label>
                                </div>
                            </div>
                        </div>

                        <!-- Botão para salvar a configuração -->
                        <div class="row mt-4">
                            <div class="col-md-12">
                                <button type="submit" class="btn btn-primary w-100">Salvar Configuração</button>
                            </div>
                        </div>
                    </form>

                    <!-- Exibição de mensagem de sucesso após a ação -->
                    @if (TempData["StatusAcao"] != null)
                    {
                        <div class="alert alert-success mt-4">
                            @Html.Raw(TempData["StatusAcao"])
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
